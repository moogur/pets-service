{
  "name": "pets",
  "version": "0.0.1",
  "description": "api for pets",
  "author": "Alexey Dvoretsky",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "serve": "npm run db:migrate && export $(cat env/.development.env | xargs) && nest start --watch",
    "serve:debug": "npm run serve -- --debug",
    "build": "rimraf dist && nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "export $(cat env/.test.env | xargs) && mkdir -p coverage && jest --config ./test/jest.unit.config.ts",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:debug": "export $(cat env/.test.env | xargs) && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest.unit.config.ts",
    "test:e2e": "export $(cat env/.test.env | xargs) && jest --config ./test/jest.e2e.config.ts",
    "db:drop": "npm run typeorm schema:drop",
    "db:create": "npm run typeorm migration:generate",
    "db:migrate": "npm run typeorm migration:run",
    "cache:clear": "npm run typeorm cache:clear",
    "typeorm": "export $(cat env/.development.env | xargs) && ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm -d ./src/configs/ormconfigMigrations.ts",
    "sonar:publish": "npm run test:coverage && node ./scripts/sonarqube-scanner.js",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.0",
    "@nestjs/typeorm": "^9.0.0",
    "back-shared-utils": "github:moogur/back-shared-utils#v0.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "redis": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^7.0.4",
    "jest": "28.1.3",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.3.2",
    "sonarqube-scanner": "^2.8.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "express": "^4.18.1",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "./src/**/*.{ts,json}": [
      "npm run lint"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage/unit",
    "reportFile": "test-reporter.xml",
    "indent": 2
  }
}
